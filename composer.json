{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "package",
      "package": {
        "name": "wpackagist-plugin/advanced-custom-fields-pro",
        "type": "wordpress-plugin",
        "version": "6.2.4",
        "dist": {
          "url": "https://connect.advancedcustomfields.com/index.php?v=6.2.4&p=pro&a=download&k=b3JkZXJfaWQ9MTQwNDIwfHR5cGU9ZGV2ZWxvcGVyfGRhdGU9MjAxOC0wOS0yMSAxNTowMzowOA==",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.11",
    "vlucas/phpdotenv": "^5.4",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wpackagist-plugin/advanced-custom-fields-pro": "^6.2",
    "soberwp/controller": "^2.1",
    "larapack/dd": "^1.1",
    "roots/acorn": "^2.0",
    "wpackagist-plugin/svg-support": "^2.4",
    "wpackagist-plugin/flexible-spacer-block": "^2.2",
    "wpackagist-plugin/wp-nested-pages": "^3.2",
    "wpackagist-plugin/wordpress-seo": "^21.5",
    "wpackagist-plugin/resizable-editor-sidebar": "^1.0",
    "wpackagist-plugin/formidable": "^6.7",
    "wpackagist-plugin/duplicate-page": "^4.4",
    "wpackagist-plugin/reusable-blocks-extended": "^0.9.0",
    "wpackagist-plugin/folders": "^3.0",
    "wpackagist-plugin/acf-extended": "0.8.9.5",
    "wpackagist-plugin/wp-mail-smtp": "^3.11",
    "wpackagist-plugin/axeptio-sdk-integration": "^2.3"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-autoload-dump": [
      "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  },
  "autoload": {
  }
}
